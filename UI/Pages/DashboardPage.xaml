<Page x:Class="OrderManagement.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard">

    <Page.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="MinHeight" Value="120"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#1a1a1a" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome Section -->
        <TextBlock Grid.Row="0" Name="txtWelcome" Text="Welcome back, John!" 
                   FontSize="28" FontWeight="Bold" Foreground="White" 
                   Margin="0,0,0,20"/>

        <!-- Statistics Cards Row -->
        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Orders -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="📦" FontSize="24" Margin="0,0,0,10"/>
                    <TextBlock Text="Total Orders" Foreground="#b0b0b0" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock Name="txtTotalOrders" Text="0" Foreground="White" FontSize="28" FontWeight="Bold"/>
                    <TextBlock Name="txtTotalOrdersChange" Text="+0% from last month" 
                               Foreground="#10b981" FontSize="10" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Pending Orders -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="⏳" FontSize="24" Margin="0,0,0,10"/>
                    <TextBlock Text="Pending Orders" Foreground="#b0b0b0" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock Name="txtPendingOrders" Text="0" Foreground="White" FontSize="28" FontWeight="Bold"/>
                    <TextBlock Name="txtPendingOrdersChange" Text="+0% from yesterday" 
                               Foreground="#10b981" FontSize="10" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Completed Today -->
            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="✅" FontSize="24" Margin="0,0,0,10"/>
                    <TextBlock Text="Completed Today" Foreground="#b0b0b0" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock Name="txtCompletedToday" Text="0" Foreground="White" FontSize="28" FontWeight="Bold"/>
                    <TextBlock Name="txtCompletedTodayChange" Text="+0% from yesterday" 
                               Foreground="#10b981" FontSize="10" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Revenue -->
            <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="💰" FontSize="24" Margin="0,0,0,10"/>
                    <TextBlock Text="Revenue Today" Foreground="#b0b0b0" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock Name="txtRevenueToday" Text="$0" Foreground="White" FontSize="28" FontWeight="Bold"/>
                    <TextBlock Name="txtRevenueTodayChange" Text="+0% from yesterday" 
                               Foreground="#10b981" FontSize="10" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Charts and Recent Orders Section -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Chart Area -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                <StackPanel>
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="Order Trends" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <Button Name="btnRefreshChart" Content="🔄" Background="Transparent" BorderThickness="0" 
                                Foreground="#4a9eff" HorizontalAlignment="Right" Cursor="Hand" Click="RefreshChart_Click"/>
                    </Grid>
                    <Border Height="300" Background="#333" CornerRadius="8">
                        <Canvas Name="chartCanvas">
                            <TextBlock Text="📊 Chart will be rendered here" 
                                       Canvas.Left="150" Canvas.Top="140"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       Foreground="#666" FontSize="14"/>
                        </Canvas>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Recent Orders -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                <StackPanel>
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="Recent Orders" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <Button Name="btnViewAllOrders" Content="View All" Background="Transparent" BorderThickness="0" 
                                Foreground="#4a9eff" HorizontalAlignment="Right" FontSize="12" Cursor="Hand" 
                                Click="ViewAllOrders_Click"/>
                    </Grid>

                    <ScrollViewer Name="recentOrdersContainer" MaxHeight="280" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="recentOrdersList">
                            <!-- Recent orders will be loaded here -->
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>