 <Window x:Class="OrderManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OrderMaster - Dashboard" MinHeight="800" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Stejné styly jako předtím -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#b0b0b0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8" Margin="5">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2a2a2a"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#4a9eff"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#1a1a1a"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#0f0f0f" BorderBrush="#333" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo Section -->
                <Border Grid.Row="0" Padding="20" Background="#0a0a0a">
                    <StackPanel>
                        <TextBlock Text="OrderMaster" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Order Management System" FontSize="10" Foreground="#666" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                    <StackPanel Name="NavigationMenu">
                        <Button Name="btnDashboard" Style="{StaticResource ActiveMenuButtonStyle}" Click="NavigateToPage" Tag="Dashboard">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Dashboard"/>
                            </StackPanel>
                        </Button>

                        <Button Name="btnListOverview" Style="{StaticResource MenuButtonStyle}" Click="NavigateToPage" Tag="ListOverview">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="List Overview"/>
                            </StackPanel>
                        </Button>

                        <Button Name="btnOrderStatus" Style="{StaticResource MenuButtonStyle}" Click="NavigateToPage" Tag="OrderStatus">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Order Status"/>
                            </StackPanel>
                        </Button>

                        <Button Name="btnOrderDetails" Style="{StaticResource MenuButtonStyle}" Click="NavigateToPage" Tag="OrderDetails">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔍" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Order Details"/>
                            </StackPanel>
                        </Button>

                        <Separator Background="#333" Margin="15,10" Height="1"/>

                        <Button Name="btnStatistics" Style="{StaticResource MenuButtonStyle}" Click="NavigateToPage" Tag="Statistics">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Statistics"/>
                            </StackPanel>
                        </Button>

                        <Button Name="btnReports" Style="{StaticResource MenuButtonStyle}" Click="NavigateToPage" Tag="Reports">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Reports"/>
                            </StackPanel>
                        </Button>

                        <Separator Background="#333" Margin="15,10" Height="1"/>

                        <Button Name="btnProfile" Style="{StaticResource MenuButtonStyle}" Click="NavigateToPage" Tag="Profile">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Profile"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- User Info & Logout -->
                <Border Grid.Row="2" Background="#0a0a0a" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Width="30" Height="30" CornerRadius="15" Background="#4a9eff" Margin="0,0,10,0">
                                <TextBlock Name="UserInitials" Text="JD" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          Foreground="White" FontWeight="Bold" FontSize="12"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Name="UserFullName" Text="John Doe" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Name="UserRole" Text="Administrator" Foreground="#666" FontSize="10"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Row="1" Content="🚪 Logout" Style="{StaticResource MenuButtonStyle}" 
                                Background="#333" Foreground="#ff4757" HorizontalAlignment="Stretch" Click="LogoutButton_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Header Bar -->
            <Border Grid.Row="0" Background="#1f1f1f" BorderBrush="#333" BorderThickness="0,0,0,1" Height="60">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Name="PageTitle" Text="Dashboard" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text=" / " Foreground="#666" FontSize="16" Margin="10,0"/>
                        <TextBlock Text="Overview" Foreground="#666" FontSize="16"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border Background="#333" CornerRadius="20" Width="250" Height="35" Margin="0,0,15,0">
                            <TextBox Background="Transparent" BorderThickness="0" Foreground="White" 
                                    VerticalAlignment="Center" Padding="15,0" FontSize="12"/>
                        </Border>

                        <Button Background="#333" Width="35" Height="35" BorderThickness="0" Cursor="Hand" Click="NotificationButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                                    <TextBlock Text="🔔" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Frame pro navigaci -->
            <Frame Name="MainContentFrame" Grid.Row="1" NavigationUIVisibility="Hidden" 
                   Background="Transparent" Margin="0"/>
        </Grid>
    </Grid>
</Window>